# =============================================================================
# Wix ↔ HubSpot Integration — Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to source control.

# --- Server ---
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# --- Wix App Credentials (from https://dev.wix.com → Your App → OAuth) ---
WIX_APP_ID=
WIX_APP_SECRET=
WIX_WEBHOOK_PUBLIC_KEY=

# --- HubSpot App Credentials (from https://developers.hubspot.com → Your App) ---
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=
HUBSPOT_REDIRECT_URI=http://localhost:3000/api/hubspot/oauth/callback

# --- MongoDB (local or Atlas) ---
MONGODB_URI=mongodb://localhost:27017/wix-hubspot-integration

# --- JWT Secret (random string, auto-generated on Render) ---
JWT_SECRET=change-me-to-a-random-string

# --- Encryption Key (64-char hex string for AES-256 token encryption) ---
ENCRYPTION_KEY=

# --- Sync Engine ---
SYNC_DEDUPE_WINDOW_MS=30000
SYNC_BATCH_SIZE=50
